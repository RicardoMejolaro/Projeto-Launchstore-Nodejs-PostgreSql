{% macro products(name, classes, products) %}

<section class="shop {{classes}}">

  <div class="items">

    {% if name %}
      <h2>{{name}}</h2>
    {% endif %}

    {% for product in products %}
      <div class="product">
        <div
          class="image"
          style="background-image: url({{"'"+product.img+"'" if product.img else "'"+'//placehold.it/500x500?text=Produto sem imagem'+"'" }})"
        >
        </div>

        {% if product.oldPrice != product.price %}
          <div class="old-price"><p>{{product.oldPrice}}</p></div>
        {% endif %}
        <p>{{product.price}}</p>
        <h4>{{product.name}}</h4>

        <a href="/products/{{product.id}}" class="button">Ver Produto</a>
      </div>
    {% endfor %}
  </div>

</section>

{% endmacro %}